@using ControleDeContatos.Enums
@model ContatoModel
@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Cliente</h1>

</div>


<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <div class="form-group">
        <label for="endereco">Endereço</label>
        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço do contato">
        @Html.ValidationMessageFor(x => x.Endereco)
    </div>
    <div class="form-group">
        <label for="nome" class="form-control">Situacao</label>
        <select asp-for="Situacao" class="form-control">
            <option value="">Selecione</option>
            <option value="@SituacaoCliente.Contrato">Contrato</option>
            <option value="@SituacaoCliente.Avulso">Avulso</option>
        </select>
        @Html.ValidationMessageFor(x => x.Situacao)
    </div>
    <div class="form-group">
        <label for="datadegarantia">Data de garantia</label>
        <input type="datetime-local" asp-for="DataDeGarantia" class="form-control" placeholder="Digite a próxima data de Atendimento">
        @Html.ValidationMessageFor(x => x.DataDeGarantia)
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    
</form>
