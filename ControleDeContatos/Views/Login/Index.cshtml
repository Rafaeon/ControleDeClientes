@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 20px;">
        <div class="text-center mb-4">
            <h1 class="display-6 fw-bold text-secondary">Bem-vindo!</h1>
            <p class="text-muted">Faça login para acessar o sistema</p>
        </div>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Sucesso:</strong> @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="mb-3">
                <label for="login" class="form-label fw-semibold">Login</label>
                <input type="text" asp-for="Login" class="form-control form-control-lg" id="Login" placeholder="Digite seu login">
                @Html.ValidationMessageFor(x => x.Login, null, new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="senha" class="form-label fw-semibold">Senha</label>
                <input type="password" asp-for="Senha" class="form-control form-control-lg" id="senha" placeholder="Digite sua senha">
                @Html.ValidationMessageFor(x => x.Senha, null, new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Entrar</button>

            <div class="text-center">
                <p class="text-muted mb-0">Esqueceu sua senha?</p>
                <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary fw-bold">Redefinir minha senha</a>
            </div>
        </form>
    </div>
</div>
