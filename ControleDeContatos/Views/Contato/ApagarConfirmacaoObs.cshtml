@model ObservacaoModel


@{
    ViewData["Title"] = "Confirmação apagar observação";
}


<div class="text-center">

    <h3>Realmente deseja apagar esta observação?</h3>

</div>

<p>@Model.Observacao</p>

<form asp-action="ApagarObs" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Sim, excluir</button>
    <a class="btn btn-secondary" asp-action="Editar" asp-route-id="@Model.ContatoId">Cancelar</a>
</form>

